<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homework1">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/title" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/title"
        android:hint="@string/content" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:hint="@string/btn_send" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_toRightOf="@id/btn_send"
        android:hint="@string/btn_clear" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_toRightOf="@id/btn_clear"
        android:hint="@string/btn_cancel" />



    <!-- Author: Joshua Joseph Dondoy -->

</RelativeLayout>

